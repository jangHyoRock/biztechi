<mvc:View controllerName="zspoc06.controller.View1"
   xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
xmlns="sap.m"
xmlns:u="sap.ui.unified"
xmlns:t="sap.ui.table"
xmlns:f="sap.f"
xmlns:fb="sap.ui.comp.filterbar"
xmlns:smartMultiInput="sap.ui.comp.smartmultiinput"
xmlns:svm="sap.ui.comp.smartvariants">
<f:DynamicPage id="page" headerExpanded="true" >
    <f:title>
        <f:DynamicPageTitle>
            <f:heading>
					<svm:SmartVariantManagement id="svm" showExecuteOnSelection="true" />
					</f:heading>
					<f:expandedContent>
						<Label id="expandedLabel" text="No filters active" />
					</f:expandedContent>
					<f:snappedContent>
						<Label id="snappedLabel" text="No filters active" />
					</f:snappedContent>
        </f:DynamicPageTitle>
    </f:title>   
    <f:header>
		<f:DynamicPageHeader pinnable="true">
                <fb:FilterBar id="filterbar" persistencyKey="myPersKey" useToolbar="false" search=".onSearch" filterChange=".onFilterChange" afterVariantLoad=".onAfterVariantLoad">
                    <fb:filterItems>
                        <fb:FilterItem name="Search">
                            <fb:control>
                                <SearchField 
                                id = "oSearch"
                                liveChange=".liveSearch"
                                /> 
                            </fb:control>
                        </fb:FilterItem>
                        <fb:FilterItem name="Order Type" label ="Order Type">
                            <fb:control>
                                <smartMultiInput:SmartMultiInput id="idSmartMultiInput1" entitySet="SalesList"  value="{OrderType}" supportRanges="true" tokenUpdate=".tokenUpdate" name="Order Type"/>
                            </fb:control>
                        </fb:FilterItem>
                        <fb:FilterItem name="Sales Organizatione" label ="Sales Organization">
                            <fb:control>
                                <smartMultiInput:SmartMultiInput id="idSmartMultiInput2" entitySet="SalesList"  value="{SalesOrganization}" supportRanges="true" tokenUpdate=".tokenUpdate"/>
                            </fb:control>
                        </fb:FilterItem>
                        <fb:FilterItem name="Dustribution Channel" label ="Dustribution Channel">
                            <fb:control>
                                <smartMultiInput:SmartMultiInput id="idSmartMultiInput3" entitySet="SalesList"  value="{DistChannel}" supportRanges="true" tokenUpdate=".tokenUpdate"/>
                            </fb:control>
                        </fb:FilterItem>
                        <fb:FilterItem name="Division" label ="Division">
                            <fb:control>
                                <smartMultiInput:SmartMultiInput id="idSmartMultiInput4" entitySet="SalesList"  value="{Division}" supportRanges="true" tokenUpdate=".tokenUpdate"/>
                            </fb:control>
                        </fb:FilterItem>
                        <fb:FilterItem name="Sales Office" label ="Sales Office">
                            <fb:control>
                                <smartMultiInput:SmartMultiInput id="idSmartMultiInput5" entitySet="SalesList"  value="{SalesOffice}" supportRanges="true" tokenUpdate=".tokenUpdate"/>
                            </fb:control>
                        </fb:FilterItem>
                        <fb:FilterItem name="Sales Group" label ="Sales Group">
                            <fb:control>
                                <smartMultiInput:SmartMultiInput id="idSmartMultiInput6" entitySet="SalesList"  value="{SalesGroup}" supportRanges="true" tokenUpdate=".tokenUpdate"/>
                            </fb:control>
                        </fb:FilterItem>
                        <fb:FilterItem name="Sold-to Party" label ="Sold-to Party">
                            <fb:control>
                                <smartMultiInput:SmartMultiInput id="idSmartMultiInput7" entitySet="SalesList"  value="{SoldToParty}" supportRanges="true" tokenUpdate=".tokenUpdate"/>
                            </fb:control>
                        </fb:FilterItem>
                        <fb:FilterItem name="Risk category" label ="Risk category">
                            <fb:control>
                                <smartMultiInput:SmartMultiInput id="idSmartMultiInput8" entitySet="SalesList"  value="{RiskCategory}" supportRanges="true" tokenUpdate=".tokenUpdate"/>
                            </fb:control>
                        </fb:FilterItem>
                        <fb:FilterItem name="Create Date" label ="Create Date">
                            <fb:control>
                                <smartMultiInput:SmartMultiInput id="idSmartMultiInput9" entitySet="SalesList"  value="{CreateDate}" supportRanges="true" tokenUpdate=".tokenUpdate"/>
                            </fb:control>
                        </fb:FilterItem>
                        <fb:FilterItem name="Rejection status(all item)" label ="Rejection status(all item)">
                            <fb:control>
                                <smartMultiInput:SmartMultiInput id="idSmartMultiInput10" entitySet="SalesList"  value="{RejectionStatus}" supportRanges="true" tokenUpdate=".tokenUpdate"/>
                            </fb:control>
                        </fb:FilterItem>
                        <fb:FilterItem name="Status of Static check" label ="Status of Static check">
                            <fb:control>
                                <smartMultiInput:SmartMultiInput id="idSmartMultiInput11" entitySet="SalesList"  value="{StatusOfStatic}" supportRanges="true" tokenUpdate=".tokenUpdate"/>
                            </fb:control>
                        </fb:FilterItem>
                        <fb:FilterItem name="Delivery status" label ="Delivery status">
                            <fb:control>
                                <smartMultiInput:SmartMultiInput id="idSmartMultiInput12" entitySet="SalesList"  value="{DeliverStatus}" supportRanges="true" tokenUpdate=".tokenUpdate"/>
                            </fb:control>
                        </fb:FilterItem>
                        <fb:FilterItem name="Created By" label ="Created By">
                            <fb:control>
                                <smartMultiInput:SmartMultiInput id="idSmartMultiInput13" entitySet="SalesList"  value="{CreatedBy}" supportRanges="true" tokenUpdate=".tokenUpdate"/>
                            </fb:control>
                        </fb:FilterItem>
                    </fb:filterItems>
                </fb:FilterBar>           
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <t:Table
            id="salesTable"
            rows="{salesList>/}"
            selectionMode="Single"
            rowSelectionChange="rowSelectionChange"
            class="sapUiSmallMarginTop">
            <t:extension>
                <OverflowToolbar style="Clear">
                    <ToolbarSpacer/>
                    <Link
                        id="rePricingLink"
                        text="Re-Pricing"
                        press=".onPressPricing"
                        enabled="false">
                    </Link>
                    <Link
                        id="rejectAllLink"
                        text="Reject All"
                        press=".onPressRejectAll"
                        enabled="false">
                    </Link>
                </OverflowToolbar>
            </t:extension>
                <t:columns>
                    <t:Column sortProperty="CreateDate" minWidth="150" width="auto">
                        <Label text="Credate Date" />
                        <t:template>
                            <Text text="{path:'salesList>CreateDate', formatter:'.dateFormat'}" wrapping="false" />
                        </t:template>
                    </t:Column>
                    <t:Column sortProperty="OrderType" filterProperty="OrderType" minWidth="100" width="auto">
                        <Label text="Order Type" />
                        <t:template>
                            <Text text="{salesList>OrderType}" wrapping="false" />
                        </t:template>
                    </t:Column>
                    <t:Column sortProperty="SalesOrderNumber" filterProperty="SalesOrderNumber" minWidth="150" width="auto">
                        <Label text="Sales Order Number" />
                        <t:template>
                            <Text text="{salesList>SalesOrderNumber}" wrapping="false" />
                        </t:template>
                    </t:Column>
                    <t:Column sortProperty="SalesOrganization" filterProperty="SalesOrganization" minWidth="150" width="auto">
                        <Label text="Sales Organization" />
                        <t:template>
                            <Text text="{salesList>SalesOrganization}" wrapping="false" />
                        </t:template>
                    </t:Column>
                    <t:Column sortProperty="DistChannel" filterProperty="DistChannel" minWidth="160" width="auto">
                        <Label text="Dustribution Channel" />
                        <t:template>
                            <Text text="{salesList>DistChannel}" wrapping="false" />
                        </t:template>
                    </t:Column>
                    <t:Column sortProperty="Division" filterProperty="Division" minWidth="100" width="auto">
                        <Label text="Division" />
                        <t:template>
                            <Text text="{salesList>Division}" wrapping="false" />
                        </t:template>
                    </t:Column>
                    <t:Column sortProperty="SalesOffice" filterProperty="SalesOffice" minWidth="100" width="auto">
                        <Label text="Sales Office" />
                        <t:template>
                            <Text text="{salesList>SalesOffice}" wrapping="false" />
                        </t:template>
                    </t:Column>
                    <t:Column sortProperty="SalesGroup" filterProperty="SalesGroup" minWidth="100" width="auto">
                        <Label text="Sales Group" />
                        <t:template>
                            <Text text="{salesList>SalesGroup}" wrapping="false" />
                        </t:template>
                    </t:Column>
                    <t:Column sortProperty="RejectionStatus" filterProperty="RejectionStatus" minWidth="150" width="auto">
                        <Label text="Rejection Status(all)" />
                        <t:template>
                            <Text text="{salesList>RejectionStatus}" wrapping="false" />
                        </t:template>
                    </t:Column>
                    <t:Column sortProperty="StatusOfStatic" filterProperty="StatusOfStatic" minWidth="180" width="auto">
                        <Label text="Status of Static check" />
                        <t:template>
                            <Text text="{salesList>StatusOfStatic}" wrapping="false" />
                        </t:template>
                    </t:Column>
                    <t:Column sortProperty="DeliverStatus" filterProperty="DeliverStatus" minWidth="150" width="auto">
                        <Label text="Delivery status" />
                        <t:template>
                            <Text text="{salesList>DeliverStatus}" wrapping="false" />
                        </t:template>
                    </t:Column>
                    <t:Column sortProperty="CreatedBy" filterProperty="CreatedBy" minWidth="100" width="auto">
                        <Label text="Created By" />
                        <t:template>
                            <Text text="{salesList>CreatedBy}" wrapping="false" />
                        </t:template>
                    </t:Column>
                    <t:Column sortProperty="SoldToParty" filterProperty="SoldToParty" minWidth="250" width="auto">
                        <Label text="Sold-to Party" />
                        <t:template>
                            <Text text="{salesList>CustomerName} ({salesList>SoldToParty})" wrapping="false" />
                        </t:template>
                    </t:Column>
                    <t:Column minWidth="150" width="auto">
                        <Label text="Sales Order Item" />
                        <t:template>
                            <Text text="{salesList>to_Items/results/0/kbmeng}" wrapping="false" />
                        </t:template>
                    </t:Column>
                    <t:Column minWidth="150" width="auto">
                        <Label text="Net Price" />
                        <t:template>
                            <Text text="{salesList>to_Items/results/0/cmpre} {salesList>to_Items/results/0/waerk}" />
                        </t:template>
                    </t:Column>
                    <t:Column minWidth="100" width="auto">
                        <Label text="Qty." />
                        <t:template>
                            <Text text="{salesList>to_Items/results/0/kbmeng} {salesList>to_Items/results/0/vrkme}"/>
                        </t:template>
                    </t:Column>
                    <t:Column minWidth="150" width="auto">
                        <Label text="Value(Inc. Tax)" />
                        <t:template>
                            <Text text="{salesList>to_Items/results/0/multiple} {salesList>to_Items/results/0/waerk}"/>
                        </t:template>
                    </t:Column>
                </t:columns>
            </t:Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>